<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:clipChildren="false">


        <ImageButton
            android:id="@+id/share_action_2"
            android:src="@drawable/ic_vk"
            android:layout_above="@+id/share_action_1"
            android:layout_alignEnd="@+id/share_expand_view"
            android:contentDescription="@null"
            android:onClick="fabAction2"
            android:scaleType="centerInside"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@id/share_action_1"
            android:src="@drawable/ic_facebook"
            android:layout_above="@id/share_expand_view"
            android:layout_alignEnd="@+id/share_expand_view"
            android:contentDescription="@null"
            android:onClick="fabAction1"
            android:scaleType="centerInside"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@id/share_expand_view"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:stateListAnimator="@anim/share_state_list_animator"
            android:scaleType="centerInside"
            android:src="@drawable/ic_share_click"

            android:contentDescription="@null"
            android:visibility="visible"
            android:layout_marginTop="8dp" />

    </RelativeLayout>
</merge>
